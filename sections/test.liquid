<style>
{% if section.settings.imagesize == "70" %}
  .left_block img {
      width: 70%;
      height: 70%;
    }
{%- elsif section.settings.imagesize == "60" -%}
  .left_block img {
      width: 60%;
      height: 60%;
    }
{%- else -%}
  .left_block img {
      width: 50%;
      height: 50%;
    }
{% endif %}



{% if section.settings.pos %}
.left_block{
  order: 2;
}

.right_block{
  order: 1;
}
{%- else -%}
.left_block{
  order: 1;
}

.right_block{
  order: 2;
}
{% endif %}

{% if section.settings.text_align == "left" %}
.right_block{
  align-items: flex-start;
}
{%- elsif section.settings.text_align == "center" -%}
.right_block{
  align-items: center;
}
{%- elsif section.settings.text_align == "right" -%}
.right_block{
  align-items: flex-end;
}
{% endif %}

.right_block h2{
  text-align: {{ section.settings.text_align }};
}
.right_block p{
  text-align: {{ section.settings.text_align }};
}


@media (max-width: 600px) {
  .left_block{
    order: 1 !important; 
  }
  
  .right_block{
    order: 2 !important;
  }
}

</style>

{% schema %}

<div class="block">
  
    <div class="left_block">

      <img src="{{ section.settings.img | img_url: 'medium' | loading: 'lazy'}}" alt="" />
      
    </div>
    <div class="right_block">
      {% comment %} <h2 id="block-title" style="font-size: {{- section.settings.title_font_size -}}px;"> {% endcomment %}
        <!-- {% if section.settings.language == "en" %} -->
      <h2 class="eng" id="block-title" style="font-size: {{- section.settings.title_font_size -}}px; color: {{- section.settings.title_color -}};">
        {{ section.settings.enblocktitle }}
      </h2>
        <!-- {%- elsif section.settings.language == "fr" -%} -->
      <h2 class="frch dlt" id="block-title" style="font-size: {{- section.settings.title_font_size -}}px; color: {{- section.settings.title_color -}};">
        {{ section.settings.frblocktitle }}
      </h2>
      <!-- {% endif %} -->

      
      <!-- {% if section.settings.language == "en" %} -->
      <p class="en" id="block-text" style="font-size: {{- section.settings.font_size -}}px; color: {{- section.settings.desc_color -}};">
        {{ section.settings.enblocktext }}
      </p>
      
      <!-- {%- elsif section.settings.language == "fr" -%} -->
      <p class="fr dlt" id="block-text" style="font-size: {{- section.settings.font_size -}}px; color: {{- section.settings.desc_color -}};">
        {{ section.settings.frblocktext }}
      </p>
      <!-- {% endif %} -->

      {% if section.settings.link != blank and section.settings.linktext != blank %}

      <a href="{{ section.settings.link }}">{{ section.settings.linktext }}</a>

      {% else %}

      {% endif %}

    </div>
  
</div>

<select id="lang">
  <option value="en">English</option>
  <option value="fr">French</option>
</select>

{% javascript %}

function start(){
  var select = document.getElementById('lang');
  select.addEventListener("change", addActivityItem);
}

function addActivityItem(){
  var eng = document.querySelector(".eng");
  var en = document.querySelector(".en");
  var frch = document.querySelector(".frch");
  var fr = document.querySelector(".fr");
  if (this.value == "en"){
    en.classList.remove("dlt");
    eng.classList.remove("dlt");
    fr.classList.add("dlt");
    frch.classList.add("dlt");
  } else {
    fr.classList.remove("dlt");  
    frch.classList.remove("dlt");  
    en.classList.add("dlt");
    eng.classList.add("dlt");
  }
}

window.addEventListener("load", start, false);
{% endjavascript %}

